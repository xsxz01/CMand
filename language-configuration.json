{
  // 注释符号配置（例如使用 # 还是 //）
  "comments": {
    "lineComment": "//",    // 单行注释符号
    "blockComment": ["/*", "*/"] // 多行注释符号
  },
  
  // 自动包围符号（输入左括号时自动补全右括号）
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  
  // 符号配对规则（用于高亮匹配）
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  
  // 自动闭合配置
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  
//   缩进规则（可选）
  "__indentationRules": {
    "increaseIndentPattern": "^.*\\{[^}\"']*$",
    "decreaseIndentPattern": "^\\s*\\}"
  }
}
